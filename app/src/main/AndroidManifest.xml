<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.osam.pavlov">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WakeUpAlarmActivty"></activity>

        <receiver
            android:name=".receiver.ScreenOffReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".receiver.ScreenOnReceiver"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".ScreenReceiverService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".TimeCheckerActivity">
            <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter></activity>
        <activity android:name=".MainActivity">

        </activity>

        <receiver
            android:name=".receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="kr.osam.pavlov.receiver.ALARM_ON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>